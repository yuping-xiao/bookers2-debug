<h2>New book</h2>

<%= form_for(book) do |f| %>

<% if book.errors.any? %>
	<p>error</p>
	<div class="alert alert-warning">
		<ul>
			<% book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>


	<div class="field row">
		<h4>title</h4>
		<%= f.text_field :title %>
	</div>

	<div class="field row">
		<h4>opinion</h4>
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>